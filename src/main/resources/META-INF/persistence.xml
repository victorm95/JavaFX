<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="dev" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>sipcoffee.models.Rol</class>
        <class>sipcoffee.models.Usuario</class>
        <class>sipcoffee.models.Departamento</class>
        <class>sipcoffee.models.Municipio</class>
        <class>sipcoffee.models.Proceso</class>
        <class>sipcoffee.models.Producto</class>
        <class>sipcoffee.models.Terreno</class>
        <class>sipcoffee.models.Bloque</class>
        <class>sipcoffee.models.Parcela</class>
        <class>sipcoffee.models.Cafeto</class>
        <class>sipcoffee.models.Siembra</class>
        <class>sipcoffee.models.Cosecha</class>
        <class>sipcoffee.models.Entrada</class>
        <class>sipcoffee.models.Salida</class>
        <class>sipcoffee.models.Nomina</class>

		  <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./database"/>
            <property name="javax.persistence.jdbc.user" value="test"/>
            <property name="javax.persistence.jdbc.password" value="test"/>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
        </properties>

    </persistence-unit>

</persistence> 
